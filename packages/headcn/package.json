{
  "name": "headcn",
  "version": "0.0.1",
  "description": "Add components to your apps.",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "stabldev",
    "url": "https://x.com/stabldev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/headcn/ui.git",
    "directory": "packages/headcn"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "components",
    "ui",
    "tailwind",
    "headless-ui",
    "headcn"
  ],
  "type": "module",
  "bin": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./registry": {
      "types": "./dist/registry/index.d.ts",
      "default": "./dist/registry/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf node_modules dist",
    "dev": "tsup --watch",
    "format:check": "prettier --check . --ignore-path ../../.gitignore",
    "format:write": "prettier --write . --ignore-path ../../.gitignore",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@repo/prettier-config",
  "devDependencies": {
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.1.0",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@antfu/ni": "^25.0.0",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "kleur": "^4.1.5",
    "ora": "^8.2.0",
    "prompts": "^2.4.2",
    "tsconfig-paths": "^4.2.0",
    "zod": "^4.0.13"
  }
}
